<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"

    >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimaryDark"
                android:elevation="4dp"
                app:title="Symptomps"
                app:titleMarginStart="10dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
                <FrameLayout
                    android:id="@+id/fragment_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.core.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="400dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="150dp"
                                    android:text="Symptoms of Coronavirus"
                                    android:textColor="#fff"
                                    android:textSize="40dp"
                                    android:gravity="center"
                                    android:background="@color/colorPrimary" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="44dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView2"
                                        android:layout_width="67dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="1"
                                        android:background="#F3FFEB3B"
                                        android:padding="10dp"
                                        app:srcCompat="@android:drawable/ic_dialog_alert"

                                        />

                                    <TextView
                                        android:layout_width="332dp"
                                        android:layout_height="83dp"
                                        android:background="#F3FFEB3B"
                                        android:padding="12dp"
                                        android:text="Older adults and people who have severe underlying medical conditions like heart or lung disease or diabetes seem to be at higher risk for developing more serious complications from COVID-19 illness."

                                        android:textColor="#000"
                                        android:textSize="12dp" />


                                </LinearLayout>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Reported illnesses have ranged from mild symptoms to severe illness and death for confirmed coronavirus disease 2019 (COVID-19) cases."
                                    android:textSize="20dp"
                                    android:paddingLeft="11dp"
                                    android:background="#E6E2E2"
                                    android:textColor="#000"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="These symptoms may appear 2-14 days after exposure (based on the incubation period of MERS-CoV viruses)."
                                    android:textSize="20dp"
                                    android:paddingLeft="11dp"
                                    android:background="#E6E2E2"
                                    android:textColor="#000"

                                    />

                                <LinearLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#E6E2E2"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="#E6E2E2"
                                        android:text="      Fever"
                                        android:textColor="#000"
                                        android:textSize="25dp"

                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="#E6E2E2"
                                        android:text="      Cough"
                                        android:textColor="#000"
                                        android:textSize="25dp"

                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="#E6E2E2"
                                        android:text="      Shortness of breath"
                                        android:textColor="#000"
                                        android:textSize="25dp"

                                        />
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="150dp"
                                    android:src="@drawable/phs"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="When to Seek Medical Attention"
                                    android:textSize="30dp"
                                    android:paddingLeft="11dp"
                                    android:textColor="#000"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="If you develop emergency warning signs for COVID-19 get medical attention immediately. Emergency warning signs include*:"
                                    android:textSize="20dp"
                                    android:textColor="#000"
                                    android:paddingLeft="11dp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="20dp"
                                    android:text="Trouble breathing"
                                    android:textColor="#000"
                                    android:textSize="23dp"

                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="20dp"
                                    android:text="Persistent pain or pressure in the chest"
                                    android:textColor="#000"
                                    android:textSize="23dp"

                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="20dp"
                                    android:text="New confusion or inability to arouse"
                                    android:textColor="#000"
                                    android:textSize="23dp"

                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="20dp"
                                    android:text="Bluish lips or face"
                                    android:textColor="#000"
                                    android:textSize="23dp"

                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="This list is not all inclusive. Please consult your medical provider for any other symptoms that are severe or concerning."
                                    android:textSize="20dp"
                                    android:textColor="#000"
                                    android:paddingLeft="11dp"
                                    />



                            </LinearLayout>

                        </androidx.core.widget.NestedScrollView>

                    </LinearLayout>
                </FrameLayout>
        </LinearLayout>





    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        android:background="@drawable/back"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"
        app:itemTextColor="#ffff"
        app:itemIconTint="#ce4552"
        />

</androidx.drawerlayout.widget.DrawerLayout>